#include <stdio.h>
#include <stdbool.h>
#include <ctype.h>

bool isValidString(const char *str) {
	printf("name : CH.Yashwanth \nregno : 192210563");
    while (*str) {
        if (!isalpha(*str)) {
            return false; 
        }
        str++;
    }
    return true;
}

int main() {
    char str[100];

    printf("\nEnter a string: ");
    scanf("%s", str);

    if (isValidString(str)) {
        printf("\nThe string is valid.\n");
    } else {
        printf("\nThe string is not valid.\n");
    }

    return 0;
}
